{% extends 'base.html.twig' %}

{% block title %}Nos montres{% endblock %}

{% block body %}
<h1>Nos montres</h1>
<div class="row">
    {% for boutique in boutiques %}
        <div class="col-12 col-md-3">
            <div class ="card">
                {% set image = "default.jpg" %}
                {% if boutique.imageName is not null %}
                {% set image = boutique.imageName %}
                {% endif %}
                <img src="{{asset ('images/boutique/' ~ image) }}" class ="card-img-top" alt="{{boutique.nom}}">
                <div class="card-body text-center">
                    <h5 class ="card-title">{{boutique.nom}}</h5>
                    <a href="{{path('app_front_boutique', {'slug': boutique.slug})}}" class ="btn btn-custom-gold">Voir</a>
                </div>
            </div>    
        </div>
{% else %}
Aucune montre
{% endfor %}
</div>    
{% endblock %}
