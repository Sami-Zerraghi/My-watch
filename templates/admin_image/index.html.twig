{% extends 'base-backend.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h1>Image</h1>
    <a href="{{ path('app_admin_image_new') }}" class ="btn btn-success">Nouveau</a>    
</div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Mise à jour</th>
                <th>Ordre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td> <a href="{{ asset('/images/montre/' ~ image.imageName) }}" data-lightbox="image.imageName">
                    <img src="{{ asset('/images/montre/' ~ image.imageName) }}" alt="image" class="img-list">
                    </a>
                </td>
                <td>{{ image.updatedAt ? image.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ image.rankOrder }}</td>
                <td>
                    {% include "admin_image/_delete_form.html.twig" %}
                    <a href="{{ path('app_admin_image_show', {'id': image.id}) }}" class ="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_image_edit', {'id': image.id}) }}" class =" btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"><div class="test-start">Aucune entrée trouvée.</div></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
