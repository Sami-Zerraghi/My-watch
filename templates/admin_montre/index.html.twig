{% extends 'base-backend.html.twig' %}

{% block title %}Montre{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h1>Montre</h1>
    <a href="{{ path('app_admin_montre_new') }}" class ="btn btn-success">Nouveau</a>    
</div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                {# <th>Description</th> #}
                <th>Prix</th>
                <th>Active</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for montre in montres %}
            <tr>
                <td>{{ montre.id }}</td>
                <td>{{ montre.nom }}</td>
                {# <td>{{ montre.description }}</td> #}
                <td>{{ montre.prix }}</td>
                <td>{{ montre.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ montre.slug }}</td>
                <td>
                    {% include "admin_montre/_delete_form.html.twig" %}
                    <a href="{{ path('app_admin_montre_show', {'id': montre.id}) }}" class ="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_montre_edit', {'id': montre.id}) }}" class ="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6"><div class="test-start">Aucune donnée trouvée.</div></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
