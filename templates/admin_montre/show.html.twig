{% extends 'base-backend.html.twig' %}

{% block title %}Montre{% endblock %}

{% block body %}
<a href="{{ path('app_admin_montre_index') }}" class = "btn btn-dark btn-sm mb2">Retour Ã  la liste</a>
<div class="d-flex justify-content-between align-items-center">
    <h1>Montre</h1>
        {{ include('admin_montre/_delete_form.html.twig') }}    
    </div> 
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ montre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ montre.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ montre.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ montre.prix }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ montre.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ montre.slug }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('app_admin_montre_edit', {'id': montre.id}) }}" class = "btn btn-success">Modifier</a>


{% endblock %}
