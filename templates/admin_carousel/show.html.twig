{% extends 'base-backend.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_carousel_index') }}" class = "btn btn-dark btn-sm mb-2">Retour à la liste</a>
    <div class="d-flex justify-content-between align-items-center">
        <h1>Carousel</h1>
        {{ include('admin_carousel/_delete_form.html.twig') }}
    </div>    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ carousel.imageName }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ carousel.updatedAt ? carousel.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ carousel.texte }}</td>
            </tr>
            <tr>
                <th>Ordre</th>
                <td>{{ carousel.rankNumber }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ carousel.tag }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ carousel.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    
    <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}" class ="btn btn-success">Modfier</a>

    
{% endblock %}
